{
  "compilerOptions": {
    "sourceRoot": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "incremental": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"]
  }
}
